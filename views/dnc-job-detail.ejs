<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Detail - <%= job.job_title %></title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      padding: 40px 20px;
    }

    .container {
      width: 100%;
      max-width: 1200px;
      animation: fadeIn 0.5s ease-in;
    }

    .header {
      margin-bottom: 30px;
    }

    .back-link {
      display: inline-block;
      color: white;
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 16px;
      transition: opacity 0.2s ease;
    }

    .back-link:hover {
      opacity: 0.8;
    }

    h1 {
      color: white;
      font-size: 2.5rem;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
      text-align: center;
    }

    .job-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      padding: 32px;
      margin-bottom: 24px;
    }

    .job-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 24px;
      padding-bottom: 24px;
      border-bottom: 2px solid #f3f4f6;
    }

    .job-id {
      font-family: 'Courier New', monospace;
      color: #6366f1;
      font-weight: 600;
      font-size: 1.25rem;
    }

    .job-status {
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-pending {
      background-color: #fef3c7;
      color: #92400e;
    }

    .status-in-progress {
      background-color: #dbeafe;
      color: #1e40af;
    }

    .status-done {
      background-color: #d1fae5;
      color: #065f46;
    }

    .job-info {
      margin-bottom: 24px;
    }

    .info-label {
      font-size: 0.875rem;
      font-weight: 600;
      color: #6b7280;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 8px;
    }

    .info-value {
      font-size: 1.125rem;
      color: #374151;
      line-height: 1.6;
    }

    .spec-section {
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      padding: 32px;
      margin-bottom: 24px;
    }

    .spec-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      user-select: none;
      padding-bottom: 16px;
      border-bottom: 2px solid #f3f4f6;
    }

    .spec-header:hover {
      opacity: 0.8;
    }

    .spec-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: #374151;
    }

    .toggle-icon {
      font-size: 1.5rem;
      color: #6366f1;
      transition: transform 0.2s ease;
    }

    .toggle-icon.expanded {
      transform: rotate(180deg);
    }

    .spec-content {
      margin-top: 24px;
      display: none;
    }

    .spec-content.visible {
      display: block;
    }

    /* 마크다운 스타일 */
    .spec-content h1,
    .subtask-spec-content h1 {
      font-size: 2rem;
      font-weight: 700;
      color: #1f2937;
      margin-top: 1.5rem;
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #e5e7eb;
    }

    .spec-content h2,
    .subtask-spec-content h2 {
      font-size: 1.5rem;
      font-weight: 600;
      color: #374151;
      margin-top: 1.25rem;
      margin-bottom: 0.75rem;
    }

    .spec-content h3,
    .subtask-spec-content h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #4b5563;
      margin-top: 1rem;
      margin-bottom: 0.5rem;
    }

    .spec-content p,
    .subtask-spec-content p {
      margin-bottom: 1rem;
      line-height: 1.6;
      color: #374151;
    }

    .spec-content ul,
    .spec-content ol,
    .subtask-spec-content ul,
    .subtask-spec-content ol {
      margin-bottom: 1rem;
      padding-left: 1.5rem;
    }

    .spec-content li,
    .subtask-spec-content li {
      margin-bottom: 0.5rem;
      line-height: 1.6;
      color: #374151;
    }

    .spec-content pre,
    .subtask-spec-content pre {
      background-color: #f3f4f6;
      border-radius: 8px;
      padding: 1rem;
      overflow-x: auto;
      margin-bottom: 1rem;
    }

    .spec-content code,
    .subtask-spec-content code {
      font-family: 'Courier New', monospace;
      font-size: 0.875rem;
      color: #1f2937;
    }

    .spec-content pre code,
    .subtask-spec-content pre code {
      background-color: transparent;
      padding: 0;
    }

    .spec-content :not(pre) > code,
    .subtask-spec-content :not(pre) > code {
      background-color: #f3f4f6;
      padding: 0.125rem 0.375rem;
      border-radius: 4px;
      color: #be123c;
    }

    .spec-content strong,
    .subtask-spec-content strong {
      font-weight: 600;
      color: #1f2937;
    }

    .spec-content em,
    .subtask-spec-content em {
      font-style: italic;
    }

    .spec-content blockquote,
    .subtask-spec-content blockquote {
      border-left: 4px solid #6366f1;
      padding-left: 1rem;
      margin: 1rem 0;
      color: #6b7280;
      font-style: italic;
    }

    /* Subtasks 스타일 */
    .subtasks-section {
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      padding: 32px;
      margin-bottom: 24px;
    }

    .subtasks-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: #374151;
      margin-bottom: 24px;
      padding-bottom: 16px;
      border-bottom: 2px solid #f3f4f6;
    }

    .subtask-item {
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 12px;
      background: #fafafa;
    }

    .subtask-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
    }

    .subtask-id {
      font-family: 'Courier New', monospace;
      color: #6366f1;
      font-weight: 600;
      font-size: 0.875rem;
    }

    .subtask-status {
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
    }

    .subtask-goal {
      color: #374151;
      margin-bottom: 12px;
      line-height: 1.6;
    }

    .subtask-spec-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      user-select: none;
      padding: 8px 12px;
      background: #f3f4f6;
      border-radius: 6px;
      margin-bottom: 8px;
    }

    .subtask-spec-header:hover {
      background: #e5e7eb;
    }

    .subtask-spec-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: #6b7280;
    }

    .subtask-spec-toggle-icon {
      font-size: 1rem;
      color: #6366f1;
      transition: transform 0.2s ease;
    }

    .subtask-spec-toggle-icon.expanded {
      transform: rotate(180deg);
    }

    .subtask-spec-content {
      display: none;
      margin-top: 12px;
      padding: 16px;
      background: white;
      border-radius: 6px;
      border: 1px solid #e5e7eb;
    }

    .subtask-spec-content.visible {
      display: block;
    }

    /* 재귀적 subtask 스타일 */
    .subtask-children {
      margin-top: 12px;
      padding-left: 20px;
      border-left: 2px solid #e5e7eb;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 768px) {
      body {
        padding: 20px 16px;
      }

      h1 {
        font-size: 1.75rem;
      }

      .job-card {
        padding: 20px;
      }

      .job-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
      }

      .job-id {
        font-size: 1rem;
      }

      .info-value {
        font-size: 1rem;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="header">
      <a href="/dnc/jobs" class="back-link">← 목록으로 돌아가기</a>
      <h1>Job Detail</h1>
    </div>

    <div class="job-card">
      <div class="job-header">
        <div class="job-id" data-testid="job-id">
          <%= job.job_title %>
        </div>
        <div class="job-status status-<%= job.status %>" data-testid="job-status">
          <%= job.status %>
        </div>
      </div>

      <div class="job-info">
        <div class="info-label">Goal</div>
        <div class="info-value" data-testid="job-goal">
          <%= job.goal %>
        </div>
      </div>
    </div>

    <div class="spec-section" data-testid="job-spec-section">
      <div class="spec-header" data-testid="spec-toggle-button" onclick="toggleSpec()">
        <div class="spec-title">Specification</div>
        <div class="toggle-icon" id="toggleIcon">▼</div>
      </div>
      <div class="spec-content" id="specContent" data-testid="spec-content">
        <%- specContentHtml %>
      </div>
    </div>

    <% if (job.divided_jobs && job.divided_jobs.length > 0) { %>
    <div class="subtasks-section" data-testid="subtasks-section">
      <div class="subtasks-title">Subtasks</div>
      <div id="subtasksContainer"></div>
    </div>
    <% } %>
  </div>

  <script>
    function toggleSpec() {
      const content = document.getElementById('specContent');
      const icon = document.getElementById('toggleIcon');

      if (content.classList.contains('visible')) {
        content.classList.remove('visible');
        icon.classList.remove('expanded');
      } else {
        content.classList.add('visible');
        icon.classList.add('expanded');
      }
    }

    function toggleSubtaskSpec(subtaskId) {
      const content = document.getElementById(`subtask-spec-content-${subtaskId}`);
      const icon = document.getElementById(`subtask-spec-icon-${subtaskId}`);

      if (content.classList.contains('visible')) {
        content.classList.remove('visible');
        icon.classList.remove('expanded');
      } else {
        content.classList.add('visible');
        icon.classList.add('expanded');
      }
    }

    function renderSubtask(subtask, level = 0) {
      const paddingLeft = level * 20;

      let html = `
        <div class="subtask-item" data-testid="subtask-item-${subtask.job_title}" style="padding-left: ${paddingLeft}px;">
          <div class="subtask-header">
            <div class="subtask-id" data-testid="subtask-id">${subtask.job_title}</div>
            <div class="subtask-status status-${subtask.status}" data-testid="subtask-status">${subtask.status}</div>
          </div>
          <div class="subtask-goal" data-testid="subtask-goal">${subtask.goal}</div>
          <div class="subtask-spec-header" data-testid="subtask-spec-toggle" onclick="toggleSubtaskSpec('${subtask.job_title}')">
            <div class="subtask-spec-title">Specification</div>
            <div class="subtask-spec-toggle-icon" id="subtask-spec-icon-${subtask.job_title}">▼</div>
          </div>
          <div class="subtask-spec-content" id="subtask-spec-content-${subtask.job_title}" data-testid="subtask-spec-content">
            ${subtask.specContentHtml}
          </div>
        </div>
      `;

      // 재귀적으로 자식 subtasks 렌더링
      if (subtask.divided_jobs && subtask.divided_jobs.length > 0) {
        html += '<div class="subtask-children">';
        for (const childSubtask of subtask.divided_jobs) {
          html += renderSubtask(childSubtask, level + 1);
        }
        html += '</div>';
      }

      return html;
    }

    // 페이지 로드 시 subtasks 렌더링
    window.addEventListener('DOMContentLoaded', () => {
      const subtasksContainer = document.getElementById('subtasksContainer');
      if (subtasksContainer) {
        const jobData = <%- JSON.stringify(job) %>;
        let html = '';
        for (const subtask of jobData.divided_jobs) {
          html += renderSubtask(subtask);
        }
        subtasksContainer.innerHTML = html;
      }
    });
  </script>
</body>

</html>
