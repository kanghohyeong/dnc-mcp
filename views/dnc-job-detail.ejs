<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= job.id %> - Task Detail</title>
  <link rel="stylesheet" href="/css/jira-style.css">
  <link rel="stylesheet" href="/css/tree-ui.css">
  <style>
    /* 페이지 레이아웃 */
    body {
      min-height: 100vh;
      padding: var(--spacing-xl) var(--spacing-lg);
    }

    /* 헤더 */
    .page-header {
      margin-bottom: var(--spacing-xl);
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      color: var(--text-secondary);
      text-decoration: none;
      font-size: var(--font-size-md);
      margin-bottom: var(--spacing-md);
      transition: color var(--transition-fast);
    }

    .back-link:hover {
      color: var(--color-primary);
    }

    .page-title {
      margin-bottom: var(--spacing-sm);
      font-size: var(--font-size-2xl);
    }

    /* 메인 카드 */
    .main-card {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      border: 1px solid var(--border-color);
      padding: var(--spacing-xl);
      margin-bottom: var(--spacing-lg);
    }

    .main-card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-bottom: var(--spacing-lg);
      border-bottom: 1px solid var(--border-color);
      margin-bottom: var(--spacing-lg);
    }

    .job-id {
      font-family: 'Courier New', monospace;
      font-size: var(--font-size-xl);
      font-weight: var(--font-weight-semibold);
      color: var(--color-primary);
    }

    .section {
      margin-bottom: var(--spacing-lg);
    }

    .section:last-child {
      margin-bottom: 0;
    }

    .section-label {
      font-size: var(--font-size-sm);
      font-weight: var(--font-weight-semibold);
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: var(--spacing-sm);
    }

    .section-content {
      font-size: var(--font-size-md);
      color: var(--text-primary);
      line-height: 1.6;
    }

    /* Acceptance Criteria */
    .acceptance-section {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      border: 1px solid var(--border-color);
      padding: var(--spacing-xl);
      margin-bottom: var(--spacing-lg);
    }

    .acceptance-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      user-select: none;
      padding-bottom: var(--spacing-md);
      border-bottom: 1px solid var(--border-color);
    }

    .acceptance-header:hover {
      opacity: 0.8;
    }

    .acceptance-title {
      font-size: var(--font-size-lg);
      font-weight: var(--font-weight-semibold);
      color: var(--text-primary);
    }

    .acceptance-toggle {
      font-size: var(--font-size-xl);
      color: var(--color-primary);
      transition: transform var(--transition-fast);
    }

    .acceptance-toggle.expanded {
      transform: rotate(180deg);
    }

    .acceptance-content {
      margin-top: var(--spacing-lg);
      display: none;
    }

    .acceptance-content.visible {
      display: block;
    }

    /* 마크다운 스타일 */
    .acceptance-content h1 {
      font-size: var(--font-size-xl);
      margin-top: var(--spacing-lg);
      margin-bottom: var(--spacing-md);
    }

    .acceptance-content h2 {
      font-size: var(--font-size-lg);
      margin-top: var(--spacing-lg);
      margin-bottom: var(--spacing-sm);
    }

    .acceptance-content h3 {
      font-size: var(--font-size-md);
      margin-top: var(--spacing-md);
      margin-bottom: var(--spacing-sm);
    }

    .acceptance-content p {
      margin-bottom: var(--spacing-md);
    }

    .acceptance-content ul,
    .acceptance-content ol {
      margin-bottom: var(--spacing-md);
      padding-left: var(--spacing-xl);
    }

    .acceptance-content li {
      margin-bottom: var(--spacing-sm);
    }

    .acceptance-content code {
      font-family: 'Courier New', monospace;
      font-size: var(--font-size-sm);
      background-color: var(--bg-secondary);
      padding: 2px 4px;
      border-radius: var(--radius-sm);
    }

    .acceptance-content pre {
      background-color: var(--bg-secondary);
      border-radius: var(--radius-sm);
      padding: var(--spacing-md);
      overflow-x: auto;
      margin-bottom: var(--spacing-md);
    }

    .acceptance-content pre code {
      background-color: transparent;
      padding: 0;
    }

    /* Subtasks 섹션 */
    .subtasks-section {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      border: 1px solid var(--border-color);
      padding: var(--spacing-xl);
      margin-bottom: var(--spacing-lg);
    }

    .subtasks-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-bottom: var(--spacing-md);
      border-bottom: 1px solid var(--border-color);
      margin-bottom: var(--spacing-lg);
    }

    .subtasks-title {
      font-size: var(--font-size-lg);
      font-weight: var(--font-weight-semibold);
      color: var(--text-primary);
    }

    .subtasks-actions {
      display: flex;
      gap: var(--spacing-sm);
    }

    .subtasks-action-btn {
      padding: var(--spacing-xs) var(--spacing-md);
      font-size: var(--font-size-sm);
      font-weight: var(--font-weight-medium);
      color: var(--color-primary);
      background: var(--bg-tertiary);
      border: 1px solid var(--border-color);
      border-radius: var(--radius-sm);
      cursor: pointer;
      transition: all var(--transition-fast);
    }

    .subtasks-action-btn:hover {
      background: var(--color-primary-light);
      border-color: var(--color-primary);
    }

    /* 반응형 */
    @media (max-width: 768px) {
      body {
        padding: var(--spacing-lg) var(--spacing-md);
      }

      .main-card {
        padding: var(--spacing-lg);
      }

      .main-card-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--spacing-sm);
      }

      .job-id {
        font-size: var(--font-size-lg);
      }

      .subtasks-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--spacing-sm);
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="page-header">
      <a href="/" class="back-link">← 목록으로 돌아가기</a>
      <h1 class="page-title">Task Detail</h1>
    </div>

    <!-- 메인 정보 -->
    <div class="main-card fade-in">
      <div class="main-card-header">
        <div class="job-id" data-testid="job-id"><%= job.id %></div>
        <div class="status-badge status-<%= job.status %>" data-testid="job-status">
          <%= job.status %>
        </div>
      </div>

      <div class="section">
        <div class="section-label">Goal</div>
        <div class="section-content" data-testid="job-goal">
          <%= job.goal %>
        </div>
      </div>
    </div>

    <!-- Acceptance Criteria -->
    <div class="acceptance-section fade-in" data-testid="job-spec-section">
      <div class="acceptance-header" onclick="toggleAcceptance()">
        <div class="acceptance-title">Acceptance Criteria</div>
        <div class="acceptance-toggle" id="acceptanceToggle">▼</div>
      </div>
      <div class="acceptance-content" id="acceptanceContent" data-testid="spec-content">
        <%- acceptanceHtml %>
      </div>
    </div>

    <!-- Subtasks (Tree UI) -->
    <% if (job.tasks && job.tasks.length > 0) { %>
    <div class="subtasks-section fade-in" data-testid="subtasks-section">
      <div class="subtasks-header">
        <div class="subtasks-title">Subtasks</div>
        <div class="subtasks-actions">
          <button class="subtasks-action-btn" onclick="expandAll()">모두 펼치기</button>
          <button class="subtasks-action-btn" onclick="collapseAll()">모두 접기</button>
        </div>
      </div>
      <div class="tree-container" id="treeContainer"></div>
    </div>
    <% } %>
  </div>

  <script src="/js/tree-ui.js"></script>
  <script>
    // Acceptance Criteria 토글
    function toggleAcceptance() {
      const content = document.getElementById('acceptanceContent');
      const toggle = document.getElementById('acceptanceToggle');

      if (content.classList.contains('visible')) {
        content.classList.remove('visible');
        toggle.classList.remove('expanded');
      } else {
        content.classList.add('visible');
        toggle.classList.add('expanded');
      }
    }

    // 페이지 로드 시 트리 렌더링
    window.addEventListener('DOMContentLoaded', () => {
      const jobData = <%- JSON.stringify(job) %>;

      // Subtasks가 있으면 트리 렌더링
      if (jobData.tasks && jobData.tasks.length > 0) {
        const treeContainer = document.getElementById('treeContainer');
        if (treeContainer) {
          let html = '';
          for (const subtask of jobData.tasks) {
            html += renderTreeItem(subtask, 0);
          }
          treeContainer.innerHTML = html;
        }
      }
    });
  </script>
</body>

</html>
