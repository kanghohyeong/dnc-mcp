<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>get-kst-time 호출 히스토리</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      padding: 40px 20px;
    }

    .container {
      width: 100%;
      max-width: 1200px;
      animation: fadeIn 0.5s ease-in;
    }

    h1 {
      color: white;
      font-size: 2.5rem;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
      margin-bottom: 30px;
      text-align: center;
    }

    table {
      width: 100%;
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      overflow: hidden;
      border-collapse: collapse;
    }

    thead {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    thead th {
      padding: 20px;
      text-align: left;
      font-weight: 600;
      font-size: 1rem;
      letter-spacing: 0.5px;
    }

    tbody tr {
      border-bottom: 1px solid #e5e7eb;
      transition: background-color 0.2s ease;
    }

    tbody tr:hover {
      background-color: #f9fafb;
    }

    tbody tr:last-child {
      border-bottom: none;
    }

    tbody tr.new-entry {
      animation: fadeIn 0.5s ease-in;
    }

    tbody td {
      padding: 16px 20px;
      color: #374151;
    }

    tbody td:first-child {
      font-family: 'Courier New', monospace;
      color: #6366f1;
      font-weight: 500;
    }

    tbody td:nth-child(2) {
      color: #059669;
      font-weight: 500;
    }

    tbody td pre {
      margin: 0;
      padding: 12px;
      background: #f3f4f6;
      border-radius: 6px;
      overflow-x: auto;
      font-size: 0.875rem;
      line-height: 1.5;
      color: #1f2937;
    }

    .empty-row td {
      text-align: center;
      padding: 40px;
      color: #9ca3af;
      font-style: italic;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 1.75rem;
      }

      thead th,
      tbody td {
        padding: 12px;
        font-size: 0.875rem;
      }

      tbody td pre {
        font-size: 0.75rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>get-kst-time 호출 히스토리</h1>

    <table id="history-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>호출 시각 (KST)</th>
          <th>응답 결과</th>
        </tr>
      </thead>
      <tbody id="history-tbody">
        <% if (history.length === 0) { %>
          <tr class="empty-row">
            <td colspan="3">아직 호출 히스토리가 없습니다.</td>
          </tr>
        <% } else { %>
          <% history.forEach(entry => { %>
            <tr data-id="<%= entry.id %>">
              <td><%= entry.id.substring(0, 8) %></td>
              <td><%= entry.timestampKst %></td>
              <td><pre><%= JSON.stringify(entry.response, null, 2) %></pre></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>

  <script>
    // EventSource를 사용한 SSE 수신
    const eventSource = new EventSource('/api/history/stream');

    eventSource.onmessage = (event) => {
      const entry = JSON.parse(event.data);
      addHistoryRow(entry);
    };

    // 서버 종료 이벤트 처리
    eventSource.addEventListener('shutdown', (event) => {
      const data = JSON.parse(event.data);
      console.log('Server shutting down:', data.reason);
      eventSource.close(); // 재연결 시도 중단
    });

    eventSource.onerror = (error) => {
      console.error('SSE connection error:', error);
      // EventSource는 기본적으로 자동 재연결을 시도함
    };

    function addHistoryRow(entry) {
      const tbody = document.getElementById('history-tbody');

      // 빈 행 제거
      const emptyRow = tbody.querySelector('.empty-row');
      if (emptyRow) {
        emptyRow.remove();
      }

      // 새 행 생성 (최신순: 맨 위에 추가)
      const row = document.createElement('tr');
      row.dataset.id = entry.id;
      row.className = 'new-entry';
      row.innerHTML = `
        <td>${entry.id.substring(0, 8)}</td>
        <td>${entry.timestampKst}</td>
        <td><pre>${JSON.stringify(entry.response, null, 2)}</pre></td>
      `;

      tbody.insertBefore(row, tbody.firstChild);
    }
  </script>
</body>
</html>
