{
  "name": "@kanghohyeong/dnc-mcp",
  "version": "0.1.0",
  "description": "An MCP (Model Context Protocol) server that applies the **Divide and Conquer paradigm** to AI-driven task management",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "dnc-mcp": "./build/index.js"
  },
  "files": ["./build"],
  "scripts": {
    "build": "tsc && cp -r src/views build/",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js",
    "test": "vitest run && playwright test",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:ui": "playwright test tests/ui",
    "test:e2e": "playwright test tests/e2e",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:debug": "playwright test --debug",
    "test:watch": "vitest",
    "test:vitest:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "marked": "^17.0.1",
    "open": "^11.0.0",
    "sanitize-html": "^2.17.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.0.0",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "supertest": "^7.2.2",
    "typescript": "^5.3.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
