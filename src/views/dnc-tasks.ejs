<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DnC Tasks - Task Management</title>
  <link rel="stylesheet" href="/css/jira-style.css">
  <style>
    body {
      min-height: 100vh;
      padding: var(--spacing-xl) var(--spacing-lg);
    }

    .page-header {
      margin-bottom: var(--spacing-xl);
    }

    .page-title {
      margin-bottom: var(--spacing-sm);
    }

    .page-subtitle {
      color: var(--text-secondary);
      font-size: var(--font-size-md);
    }

    .task-list {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .task-card {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      border: 1px solid var(--border-color);
      padding: var(--spacing-lg);
      transition: all var(--transition-normal);
      cursor: pointer;
    }

    .task-card:hover {
      border-color: var(--color-primary);
      box-shadow: var(--shadow-md);
    }

    .task-card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--spacing-md);
    }

    .task-id {
      font-family: 'Courier New', monospace;
      font-size: var(--font-size-lg);
      font-weight: var(--font-weight-semibold);
      color: var(--color-primary);
    }

    .task-goal {
      color: var(--text-primary);
      line-height: 1.6;
      margin-bottom: var(--spacing-md);
    }

    .task-link {
      color: var(--color-primary);
      text-decoration: none;
      font-weight: var(--font-weight-medium);
      font-size: var(--font-size-sm);
      transition: color var(--transition-fast);
    }

    .task-link:hover {
      color: var(--color-primary-hover);
    }

    .section-empty {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      border: 2px dashed var(--border-color);
      padding: var(--spacing-xl);
      text-align: center;
      color: var(--text-tertiary);
      font-size: var(--font-size-md);
    }

    @media (max-width: 768px) {
      body {
        padding: var(--spacing-lg) var(--spacing-md);
      }

      .task-card-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--spacing-sm);
      }

      .task-id {
        font-size: var(--font-size-md);
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Task Management</h1>
      <p class="page-subtitle">DnC (Divide and Conquer) Task List</p>
    </div>

    <!-- Tab Bar -->
    <div class="tab-bar">
      <button class="tab-btn active" data-target="tab-panel-active">
        In Progress
        <span class="tab-count"><%= activeTasks.length %></span>
      </button>
      <button class="tab-btn" data-target="tab-panel-done">
        Done
        <span class="tab-count"><%= doneTasks.length %></span>
      </button>
    </div>

    <!-- In Progress Panel -->
    <div id="tab-panel-active" class="tab-panel">
      <% if (activeTasks.length === 0) { %>
        <div class="section-empty fade-in">No active tasks</div>
      <% } else { %>
        <div class="task-list fade-in" data-testid="task-list-active">
          <% activeTasks.forEach(task => { %>
            <div class="task-card" onclick="location.href='/<%= task.id %>'" data-testid="task-item">
              <div class="task-card-header">
                <div class="task-id"><%= task.id %></div>
                <div class="status-badge status-<%= task.status %>" data-testid="task-status">
                  <%= task.status %>
                </div>
              </div>
              <div class="task-goal"><%= task.goal %></div>
              <a href="/<%= task.id %>" class="task-link" onclick="event.stopPropagation()">
                View Details →
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    <!-- Done Panel -->
    <div id="tab-panel-done" class="tab-panel" style="display:none;">
      <% if (doneTasks.length === 0) { %>
        <div class="section-empty fade-in">No completed tasks</div>
      <% } else { %>
        <div class="task-list fade-in" data-testid="task-list-done">
          <% doneTasks.forEach(task => { %>
            <div class="task-card task-card--done" onclick="location.href='/<%= task.id %>'" data-testid="task-item">
              <div class="task-card-header">
                <div class="task-id"><%= task.id %></div>
                <div class="status-badge status-<%= task.status %>" data-testid="task-status">
                  <%= task.status %>
                </div>
              </div>
              <div class="task-goal"><%= task.goal %></div>
              <a href="/<%= task.id %>" class="task-link" onclick="event.stopPropagation()">
                View Details →
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    (function () {
      const tabBtns = document.querySelectorAll('.tab-btn');
      const tabPanels = document.querySelectorAll('.tab-panel');

      tabBtns.forEach(function (btn) {
        btn.addEventListener('click', function () {
          const targetId = btn.getAttribute('data-target');

          tabBtns.forEach(function (b) { b.classList.remove('active'); });
          tabPanels.forEach(function (p) { p.style.display = 'none'; });

          btn.classList.add('active');
          const target = document.getElementById(targetId);
          if (target) target.style.display = 'block';
        });
      });
    })();
  </script>
</body>

</html>
