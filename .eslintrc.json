{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier"
  ],
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  },
  "env": {
    "node": true,
    "es2022": true
  },
  "ignorePatterns": [
    "tests/**/*",
    "test-setup.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "build/**/*",
    "node_modules/**/*"
  ]
}
